#To be appended after .gitconfig for colors and shortcuts
[color]
	diff  = auto
	status= auto
	branch= auto
	interactive = true
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	lg = log --graph
	d = diff
[core]
	editor = vim
	attributesfile = ~/.gitattributes
[diff "pdf"]
      textconv = pdfinfo
[difftool "image_diff"]
      cmd = compare $REMOTE $LOCAL png:- | montage -tile 3x -geometry 400x -label "reference" $LOCAL -label "diff" - -label "current--%f" $REMOTE x:
      #cmd = compare $LOCAL $REMOTE png:- | display -title "$REMOTE" -
      #cmd = composite $LOCAL $REMOTE -compose difference x:
